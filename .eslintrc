{
  "parser": "@babel/eslint-parser",
  "extends": [
    "airbnb-base",
    "plugin:flowtype/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "arrowFunctions": true,
      "binaryLiterals": true,
      "blockBindings": true,
      "classes": true,
      "no-dupe-else-if": true,
      "object-shorthand": [
        "error",
        "always"
      ]
    }
  },
  "plugins": [
    "import",
    "flowtype"
  ],
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "settings": {
    "ecmascript": 6,
    "import/resolver": {
      "node": {
        "extensions": [
          ".js"
        ]
      }
    },
  },
  "rules": {
    "array-bracket-spacing": [
      "error",
      "always",
      {
        "arraysInArrays": false,
        "objectsInArrays": false,
        "singleValue": false
      }
    ],
    "lines-between-class-members": 0,
    "max-classes-per-file": ["error", 2],
    "class-methods-use-this": [
      0
    ],
    "comma-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline",
        "imports": "always-multiline",
        "exports": "always-multiline",
        "functions": "never"
      }
    ],
    "default-param-last": 0,
    "dot-notation": [
      1
    ],
    "func-style": [
      "error",
      "declaration",
      {
        "allowArrowFunctions": true
      }
    ],
    "max-len": 0,
    "no-else-return": [
      "error",
      {
        "allowElseIf": false
      }
    ],
    "no-param-reassign": 0,
    "no-plusplus": [
      0
    ],
    "no-extra-boolean-cast": [
      0
    ],
    "no-dupe-else-if": [
      2
    ],
    "no-unreachable": [
      2
    ],
    "object-shorthand": [
      "error",
      "always"
    ],
    "prefer-arrow-callback": [
      "error",
      {
        "allowNamedFunctions": true
      }
    ],
    "space-before-function-paren": [
      "error",
      "always"
    ]
  }
}
